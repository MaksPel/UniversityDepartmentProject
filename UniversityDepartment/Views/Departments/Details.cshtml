@model UniversityDepartment.Models.Department

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Кафедра</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Тип отчётности
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsGraduating)
        </dd>
        <dt class="col-sm-2">
            Факультет
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Список специальностей</h4>
    @if (Model.Specialties != null && Model.Specialties.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Название специальности</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Specialties)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <a asp-controller="Specialties" asp-action="Edit" asp-route-id="@item.SpecialtyId">Редактировать</a> |
                            <a asp-controller="Specialties" asp-action="Details" asp-route-id="@item.SpecialtyId">Детали</a> |
                            <a asp-controller="Specialties" asp-action="Delete" asp-route-id="@item.SpecialtyId">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Специальности отсутствуют.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.DepartmentId">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
