@model UniversityDepartment.Models.Faculty

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Факультет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Список отделений</h4>
    @if (Model.Departments != null && Model.Departments.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Название отделения</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Departments)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <a asp-controller="Departments" asp-action="Edit" asp-route-id="@item.DepartmentId">Редактировать</a> |
                            <a asp-controller="Departments" asp-action="Details" asp-route-id="@item.DepartmentId">Детали</a> |
                            <a asp-controller="Departments" asp-action="Delete" asp-route-id="@item.DepartmentId">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Отделения отсутствуют.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.FacultyId">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
