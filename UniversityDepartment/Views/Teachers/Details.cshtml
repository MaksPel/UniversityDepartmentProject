@model UniversityDepartment.Models.Teacher

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Преподаватели</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Фамилия
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            Отчество
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Midname)
        </dd>
        <dt class="col-sm-2">
            Должность
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-2">
            Возраст
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>
</div>

<div>
    <h4>Список предметов</h4>
    @if (Model.Subjects != null && Model.Subjects.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Предметы</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Subjects)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <a asp-controller="Subjects" asp-action="Edit" asp-route-id="@item.SubjectId">Редактировать</a> |
                            <a asp-controller="Subjects" asp-action="Details" asp-route-id="@item.SubjectId">Детали</a> |
                            <a asp-controller="Subjects" asp-action="Delete" asp-route-id="@item.SubjectId">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Предметы отсутствуют.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.TeacherId">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
