@model UniversityDepartment.Models.Specialty

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Специальность</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Кафедра
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Список курсов</h4>
    @if (Model.Courses != null && Model.Courses.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id курса</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Courses)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CourseId)</td>
                        <td>
                            <a asp-controller="Courses" asp-action="Edit" asp-route-id="@item.CourseId">Редактировать</a> |
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.CourseId">Детали</a> |
                            <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.CourseId">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Курсы отсутствуют.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.SpecialtyId">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
