@model UniversityDepartment.Models.Subject

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Предмет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Часы лекций
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LectureHours)
        </dd>
        <dt class="col-sm-2">
            Часы практики
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PracticalHours)
        </dd>
        <dt class="col-sm-2">
            Часы лабораторных
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LabHours)
        </dd>
        <dt class="col-sm-2">
            Тип отчётности
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportingType)
        </dd>
    </dl>
</div>

<div>
    <h4>Список курсов</h4>
    @if (Model.Courses != null && Model.Courses.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id курса</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Courses)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CourseId)</td>
                        <td>
                            <a asp-controller="Courses" asp-action="Edit" asp-route-id="@item.CourseId">Редактировать</a> |
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.CourseId">Детали</a> |
                            <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.CourseId">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Курсы отсутствуют.</p>
    }
</div>

<div>
    <h4>Список преподавателей</h4>
    @if (Model.Teachers != null && Model.Teachers.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Преподаватели</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Teachers)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Surname) @Html.DisplayFor(modelItem => item.Midname)</td>
                        <td>
                            <a asp-controller="Teachers" asp-action="Edit" asp-route-id="@item.TeacherId">Редактировать</a> |
                            <a asp-controller="Teachers" asp-action="Details" asp-route-id="@item.TeacherId">Детали</a> |
                            <a asp-controller="Teachers" asp-action="Delete" asp-route-id="@item.TeacherId">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Преподаватели отсутствуют.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.SubjectId">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
