@model UniversityDepartment.Models.Course

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Курс</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            id курса
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class="col-sm-2">
            Номер курса
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseNumber)
        </dd>
        <dt class="col-sm-2">
            Номер семестра
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SemesterNumber)
        </dd>
        <dt class="col-sm-2">
            Специальность
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialty.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Список предметов</h4>
    @if (Model.Subjects != null && Model.Subjects.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Название предмета</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Subjects)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <a asp-controller="Subjects" asp-action="Edit" asp-route-id="@item.SubjectId">Редактировать</a> |
                            <a asp-controller="Subjects" asp-action="Details" asp-route-id="@item.SubjectId">Детали</a> |
                            <a asp-controller="Subjects" asp-action="Delete" asp-route-id="@item.SubjectId">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Предметы отсутствуют.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseId">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
